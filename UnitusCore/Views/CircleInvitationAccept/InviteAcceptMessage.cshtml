@model UnitusCore.Controllers.SimpleMessage
@{
    Layout = "/Views/_BaseLayout.cshtml";
    ViewBag.Title = "サークルへの招待";
}
@section Header{
    <link href="/Content/Styles/Login.css" rel="stylesheet">
        <meta http-equiv="Refresh" content="3;URL=@(Url.Action("Login","Account"))" />
}
<div class="table">
    <div class="table-cell">
        <div class="login-container">
            <img class="login-logo" src="/Content/logo.png" />
            <h1 class="login-header">エラー</h1>
            <p class="bg-@(Model.IsError?"error":"success")">
                @Model.ErrorMessage
            </p>
            <p>3秒後にログイン画面に戻ります。</p>
            @*@if (Model != null)
            {
                <p class="bg-@(Model.IsPositiveMessage?"success" :"warning")">@Html.Raw(Model.InfomationMessage)</p>
            }*@
        </div>
    </div>
</div>