@using System.Collections.Concurrent
@{
    Layout = "/Views/_BaseLayout.cshtml";
    ViewBag.Title = "ログイン";
}

@section Header{
    <link href="/Content/Styles/Login.css" rel="stylesheet">
}

    <div class="table">
        <div class="table-cell">
            <div class="login-container">
                <img class="login-logo" src="/Content/logo.png" />
                <h1 class="login-header">ログイン</h1>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="text" name="UserName" class="form-control" />
                    <input type="password" name="Password" class="form-control" />
                    <input type="submit" value="ログイン" class="form-control btn btn-primary"/>
                   @Html.ActionLink("パスワードを忘れた","ForgotPassword")
                }
            </div>
        </div>
    </div>